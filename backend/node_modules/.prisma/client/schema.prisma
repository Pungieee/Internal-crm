generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  RESIDENT
  STAFF
  ADMIN
}

enum TicketStatus {
  OPEN
  IN_PROGRESS
  RESOLVED
  OVERDUE
}

enum TicketPriority {
  LOW
  MEDIUM
  HIGH
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(RESIDENT)
  createdAt DateTime @default(now())

  ticketsCreated  Ticket[] @relation("TicketsCreated")
  ticketsAssigned Ticket[] @relation("TicketsAssigned")
}

model Ticket {
  id          Int            @id @default(autoincrement())
  title       String
  description String
  status      TicketStatus   @default(OPEN)
  priority    TicketPriority @default(MEDIUM)
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  slaDeadline DateTime

  // creator
  createdById Int
  createdBy   User @relation("TicketsCreated", fields: [createdById], references: [id])

  // assigned staff (nullable)
  assignedStaffId Int?
  assignedStaff   User? @relation("TicketsAssigned", fields: [assignedStaffId], references: [id])
}
